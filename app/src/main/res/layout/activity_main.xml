<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_marginTop="16dp"
        android:id="@+id/ET_InputCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="請輸入電話號碼"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btn_OpenCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/ET_InputCall"
        android:text="Call"
        android:onClick="OpenCall"/>

    <Button
        android:id="@+id/btn_OpenGoogleMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_OpenCall"
        android:layout_marginTop="20dp"
        android:text="GoogleMap"
        android:onClick="OpenGoogleMap"/>

    <Button
        android:id="@+id/btn_OpenGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_OpenGoogleMap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="OpenGoogle"
        android:text="Google" />

</RelativeLayout>